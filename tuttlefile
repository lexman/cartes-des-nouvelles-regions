# La région Centre est devenue Centre-Val de Loire !
file://centre-val-de-loire.poly <- http://download.geofabrik.de/europe/france/centre.poly ! download 

# Les nouvelles régions correspondent à des fusions des anciennes :

file://bourgogne-franche-comte.poly <- file://bourgogne.poly file://franche-comte.poly file://merge_polys.py
    ./merge_polys.py bourgogne.poly franche-comte.poly > bourgogne-franche-comte.poly
    
file://normandie.poly <- file://basse-normandie.poly file://haute-normandie.poly file://merge_polys.py
    ./merge_polys.py basse-normandie.poly haute-normandie.poly > normandie.poly

file://hauts-de-france.poly <- file://nord-pas-de-calais.poly file://picardie.poly file://merge_polys.py
    ./merge_polys.py nord-pas-de-calais.poly picardie.poly > hauts-de-france.poly

file://grand-est.poly <- file://lorraine.poly file://alsace.poly file://champagne-ardenne.poly file://merge_polys.py
    ./merge_polys.py lorraine.poly alsace.poly champagne-ardenne.poly > grand-est.poly

file://nouvelle-aquitaine.poly <- file://aquitaine.poly file://poitou-charentes.poly file://limousin.poly file://merge_polys.py
    ./merge_polys.py aquitaine.poly poitou-charentes.poly limousin.poly > nouvelle-aquitaine.poly

file://occitanie.poly <- file://midi-pyrenees.poly file://languedoc-roussillon.poly file://merge_polys.py
    ./merge_polys.py midi-pyrenees.poly languedoc-roussillon.poly > occitanie.poly

file://auvergne-rhone-alpes.poly <- file://rhone-alpes.poly file://auvergne.poly file://merge_polys.py
    ./merge_polys.py rhone-alpes.poly auvergne.poly > auvergne-rhone-alpes.poly


# Téléchargment de l'outil traitement d'OSM
file://osmosis-latest.tgz <- https://bretth.dev.openstreetmap.org/osmosis-build/osmosis-latest.tgz ! download

file://osmosis <- file://osmosis-latest.tgz
    mkdir osmosis
    cd osmosis
    tar xvfz ../osmosis-latest.tgz
    chmod a+x bin/osmosis

#file://planet-latest.osm.pbf <- https://planet.osm.org/pbf/planet-latest.osm.pbf ! download

|<<
    NOUVELLES_REGIONS="guadeloupe martinique guyane reunion mayotte ile-de-france pays-de-la-loire bretagne provence-alpes-cote-d-azur corse centre-val-de-loire bourgogne-franche-comte normandie hauts-de-france grand-est nouvelle-aquitaine occitanie auvergne-rhone-alpes"
    tuttle-extend-workflow extraire_regions.tuttle regions[]=$NOUVELLES_REGIONS


